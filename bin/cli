#!/usr/bin/env bash

TYPE_GEN_SCRIPT="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/../vendor/imagemagick_type_gen"

echo "<----- Ensuring $HOME/.config/ImageMagick exists"
mkdir -p "$HOME/.config/ImageMagick"

echo "<----- Writing font definition to $HOME/.config/ImageMagick/type.xml"
find "$HOME/Library/Fonts" -type f -name '*.*' | "$TYPE_GEN_SCRIPT" -f - > "$HOME/.config/ImageMagick/type.xml"
